/*Home*/
.signup-wrapper {
  display: flex;
  justify-content: center;
  margin: auto;
  height: 80vh;
  background-image: url("<%= asset_path('PleaseTeachMe-background-home.png')%>");

  >.introduction-app-container {
    width: 100%;
    text-align: center;
    margin: auto;

    >h1 {
      color: white;
    }

  }

  >.signup-container {
    width: 100%;
    height: 100%;
    text-align: center;
    display:flex;
    align-items: center;
    >.signup-btn { 
        display:block;
        margin: auto;
        font-size: 1.4rem;
        padding: 4px 2px;
        border-radius: 8px;
        text-align: center;
        height: 6%;
        width: auto;
        text-decoration:none;
        color: black;
        background-color: white;
      }
    }
  
  }