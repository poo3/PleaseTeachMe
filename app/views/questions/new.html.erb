<h1 class="question-head">質問投稿</h1>

<div class="question-form-wrapper">
  <div class="question-form-container">
    <%= form_with(model: @question, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.text_area :title, placeholder: "タイトルを入力", class: 'form-box', rows: 1%>

      <%= f.text_area :content, placeholder: "質問内容を入力", class: 'form-box', rows: 10%>

      <%= f.submit "投稿", class: "btn btn-submit" %>
    <% end %>
  </div>
</div>