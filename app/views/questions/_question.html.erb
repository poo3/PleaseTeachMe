<div id="question-<%= question.id %>" class="question-box">
  <span class="question-title"><%= link_to question.title, question_path(question) %></span>
  <span class="question-destroy"><%= link_to '質問を削除',question, method: :delete,data: {confirm: "本当に削除しますか？"},class: "delete-question-link"%></span>
  <span class="question-timestamp"><%= time_ago_in_words(question.created_at) %> 前</span>
</div>